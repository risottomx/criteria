{
  "name": "@risotto/criteria",
  "version": "0.0.4",
  "description": "Risotto library to use criteria/specification pattern",
  "main": "index.js",
  "types": "index.d.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/risottomx/criteria.git"
  },
  "keywords": [
    "risotto",
    "criteria",
    "specification",
    "pattern",
    "DDD",
    "typescript"
  ],
  "author": "Pepe Flores",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/risottomx/criteria/issues"
  },
  "homepage": "https://github.com/risottomx/criteria#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@risotto/value-objects": "^1.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
